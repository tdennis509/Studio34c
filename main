  <script>
    // Example starting tracks (audio from SoundHelix for demo, use your own in production)
    let trackList = [
      {
        id: 'track1',
        name: 'Drifting Petals',
        genre: 'Lofi / Chillwave',
        bpm: 80,
        price: '$24.99',
        audioUrl: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3'
      },
      {
        id: 'track2',
        name: 'Crimson Tide',
        genre: 'Ambient / Cinematic',
        bpm: 65,
        price: '$44.99',
        audioUrl: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3'
      },
      {
        id: 'track3',
        name: 'Urban Canvas',
        genre: 'Hip Hop / Soul',
        bpm: 92,
        price: '$34.99',
        audioUrl: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-3.mp3'
      }
    ];

    // UI components
    const instrumentalsContainer = document.getElementById('instrumentalsContainer');
    let currentTrackId = null;

    function renderTracks() {
      instrumentalsContainer.innerHTML = '';
      trackList.forEach(track => {
        const card = document.createElement('div');
        card.className = 'bg-secondary-light p-6 rounded-2xl shadow-lg flex flex-col group border border-soft-gray transition hover:scale-[1.02] hover:shadow-xl hover:shadow-accent-watercolor/20';
        card.innerHTML = `
          <div class="flex flex-col h-full gap-2">
            <h3 class="text-3xl font-bold text-text-dark mb-1">${track.name}</h3>
            <p class="text-accent-watercolor text-md font-semibold uppercase tracking-wider mb-2">${track.genre}</p>
            <div class="flex items-center text-gray-500 text-sm mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 text-accent-watercolor" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.414-1.414L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              ${track.bpm} BPM
            </div>
            <audio id="audio-${track.id}" src="${track.audioUrl}" preload="auto" class="w-full mt-2" style="outline:none;"></audio>
            <div class="flex items-center justify-between mt-auto pt-4 border-t border-soft-gray gap-3">
              <span class="text-3xl font-extrabold text-accent-dark">${track.price}</span>
              <button class="play-btn flex items-center justify-center w-14 h-14 rounded-full bg-soft-gray text-accent-watercolor transition hover:bg-accent-watercolor hover:text-white" data-track-id="${track.id}" title="Play/Pause">
                <svg class="play-icon w-7 h-7 ${track.id === currentTrackId ? 'hidden' : ''}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                </svg>
                <svg class="pause-icon w-7 h-7 ${track.id === currentTrackId ? '' : 'hidden'}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </button>
              <button class="add-cart-btn px-4 py-2 bg-accent-watercolor text-white font-bold rounded-lg transition hover:bg-accent-dark shadow" data-track-id="${track.id}" title="Add to Cart">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M16 11V7a4 4 0 00-8 0v4m8 0a2 2 0 11-4 0m4 0H8m4 0a2 2 0 114 0z" />
                </svg>
                Add to Cart
              </button>
            </div>
          </div>
        `;
        instrumentalsContainer.appendChild(card);
      });
      attachTrackListeners();
    }

    function attachTrackListeners() {
      document.querySelectorAll('.play-btn').forEach(btn => {
        btn.onclick = function() {
          let trackId = btn.dataset.trackId;
          let audioElem = document.getElementById('audio-' + trackId);
          document.querySelectorAll('audio').forEach(a => {
            if (a.id !== 'audio-' + trackId) {
              a.pause(); a.currentTime = 0;
              let pbtn = a.parentElement.querySelector('.play-btn');
              if (pbtn) {
                pbtn.querySelector('.play-icon').classList.remove('hidden');
                pbtn.querySelector('.pause-icon').classList.add('hidden');
              }
            }
          });
          if (audioElem.paused) {
            audioElem.play();
            currentTrackId = trackId;
            btn.querySelector('.play-icon').classList.add('hidden');
            btn.querySelector('.pause-icon').classList.remove('hidden');
          } else {
            audioElem.pause();
            btn.querySelector('.play-icon').classList.remove('hidden');
            btn.querySelector('.pause-icon').classList.add('hidden');
            currentTrackId = null;
          }
        }
      });

      document.querySelectorAll('.add-cart-btn').forEach(btn => {
        btn.onclick = function() {
          let trackId = btn.dataset.trackId;
          let track = trackList.find(t => t.id == trackId);
          showMessage(`Added "${track.name}" to cart! Checkout coming soon.`);
        }
      });
    }

    function showMessage(msg) {
      let box = document.getElementById('messageBox');
      let txt = document.getElementById('messageText');
      txt.textContent = msg;
      box.classList.remove('hidden');
      box.classList.add('flex');
      setTimeout(() => {
        box.classList.add('hidden');
        box.classList.remove('flex');
      }, 2500);
    }

    document.getElementById('uploadForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('trackName').value.trim();
      const genre = document.getElementById('trackGenre').value.trim();
      const bpm = document.getElementById('trackBpm').value.trim();
      const price = document.getElementById('trackPrice').value.trim();
      const audioFile = document.getElementById('trackAudio').files[0];
      if (!name || !genre || !bpm || !price || !audioFile) {
        showMessage('Please fill all fields and select a valid audio file.');
        return;
      }
      const localAudioUrl = URL.createObjectURL(audioFile);
      trackList.push({
        id: 'track' + (trackList.length + 1),
        name,
        genre,
        bpm,
        price,
        audioUrl: localAudioUrl
      });
      renderTracks();
      showMessage(`Instrumental "${name}" uploaded!`);
      this.reset();
    });

    document.getElementById('contactForm').addEventListener('submit', function(e) {
      e.preventDefault();
      showMessage('Thank you for getting in touch! We will reply soon.');
      this.reset();
      // For production: send to backend/email system here
    });

    renderTracks();
  </script>
</body>
</html>
